@model IEnumerable<DailyRoutine>

@{
    ViewData["Title"] = "Daily Routines";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-repeat me-2"></i>Daily Routines</h2>
    <a asp-action="Create" class="btn btn-info">
        <i class="fas fa-plus me-2"></i>Create New Routine
    </a>
</div>

@if (Model.Any())
{
    <!-- Group routines by day of week -->
    @foreach (var dayGroup in Model.GroupBy(r => r.DayOfWeek).OrderBy(g => (int)g.Key))
    {
        <div class="card mb-4">
            <div class="card-header">
                <h4 class="mb-0">@dayGroup.Key</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var item in dayGroup.OrderBy(r => r.StartTime))
                    {
                        <div class="col-lg-4 col-md-6 mb-3">
                            <div class="card border-0 shadow-sm">
                                <div class="card-header d-flex justify-content-between align-items-center bg-light">
                                    <h6 class="card-title mb-0">@Html.DisplayFor(modelItem => item.Title)</h6>
                                    <span class="badge bg-@(item.Priority == RoutinePriority.Critical ? "danger" : item.Priority == RoutinePriority.High ? "warning" : item.Priority == RoutinePriority.Medium ? "info" : "secondary")">
                                        @Html.DisplayFor(modelItem => item.Priority)
                                    </span>
                                </div>
                                <div class="card-body">
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <p class="card-text small">@Html.DisplayFor(modelItem => item.Description)</p>
                                    }
                                    <p class="card-text">
                                        <small class="text-muted">
                                            <i class="fas fa-clock me-1"></i>
                                            @item.StartTime.ToString("HH:mm")
                                            @if (item.EndTime.HasValue)
                                            {
                                                @: - @item.EndTime.Value.ToString("HH:mm")
                                            }
                                        </small>
                                    </p>
                                    @if (!string.IsNullOrEmpty(item.Category))
                                    {
                                        <span class="badge bg-light text-dark">@Html.DisplayFor(modelItem => item.Category)</span>
                                    }
                                    @if (!item.IsActive)
                                    {
                                        <span class="badge bg-warning text-dark">Inactive</span>
                                    }
                                </div>
                                <div class="card-footer">
                                    <div class="btn-group w-100" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-repeat fa-3x text-muted mb-3"></i>
        <h4>No routines found</h4>
        <p class="text-muted">Get started by creating your first daily routine.</p>
        <a asp-action="Create" class="btn btn-info">
            <i class="fas fa-plus me-2"></i>Create New Routine
        </a>
    </div>
}