@model IEnumerable<TaskItem>

@{
    ViewData["Title"] = "Tasks";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-tasks me-2"></i>Tasks</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus me-2"></i>Create New Task
    </a>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <div>
                            <span class="badge bg-@(item.Priority == TaskPriority.Critical ? "danger" : item.Priority == TaskPriority.High ? "warning" : item.Priority == TaskPriority.Medium ? "info" : "secondary")">
                                @Html.DisplayFor(modelItem => item.Priority)
                            </span>
                            <span class="badge bg-@(item.Status == Planner.Web.Models.TaskStatus.Completed ? "success" : item.Status == Planner.Web.Models.TaskStatus.InProgress ? "primary" : "secondary")">
                                @Html.DisplayFor(modelItem => item.Status)
                            </span>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                        }
                        @if (item.DueDate.HasValue)
                        {
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>Due: @Html.DisplayFor(modelItem => item.DueDate)
                                </small>
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(item.Category))
                        {
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="fas fa-tag me-1"></i>@Html.DisplayFor(modelItem => item.Category)
                                </small>
                            </p>
                        }
                        @if (item.Progress > 0)
                        {
                            <div class="mb-2">
                                <small class="text-muted">Progress: @item.Progress%</small>
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar" role="progressbar" style="width: @item.Progress%" aria-valuenow="@item.Progress" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        }
                        @if (item.Event != null)
                        {
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="fas fa-link me-1"></i>Related to: @item.Event.Title
                                </small>
                            </p>
                        }
                    </div>
                    <div class="card-footer">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit me-1"></i>Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                <i class="fas fa-eye me-1"></i>Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash me-1"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-tasks fa-3x text-muted mb-3"></i>
        <h4>No tasks found</h4>
        <p class="text-muted">Get started by creating your first task.</p>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>Create New Task
        </a>
    </div>
}