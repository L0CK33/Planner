@model IEnumerable<PlannerEvent>

@{
    ViewData["Title"] = "Events";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-calendar-alt me-2"></i>Events</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Create New Event
    </a>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <span class="badge bg-@(item.Priority == EventPriority.Critical ? "danger" : item.Priority == EventPriority.High ? "warning" : item.Priority == EventPriority.Medium ? "info" : "secondary")">
                            @Html.DisplayFor(modelItem => item.Priority)
                        </span>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                        }
                        <p class="card-text">
                            <small class="text-muted">
                                <i class="fas fa-clock me-1"></i>
                                @Html.DisplayFor(modelItem => item.StartDate)
                                @if (item.EndDate.HasValue)
                                {
                                    @: - @Html.DisplayFor(modelItem => item.EndDate)
                                }
                            </small>
                        </p>
                        @if (!string.IsNullOrEmpty(item.Location))
                        {
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="fas fa-map-marker-alt me-1"></i>@Html.DisplayFor(modelItem => item.Location)
                                </small>
                            </p>
                        }
                        @if (item.IsCompleted)
                        {
                            <span class="badge bg-success"><i class="fas fa-check me-1"></i>Completed</span>
                        }
                    </div>
                    <div class="card-footer">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit me-1"></i>Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                <i class="fas fa-eye me-1"></i>Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash me-1"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-calendar-alt fa-3x text-muted mb-3"></i>
        <h4>No events found</h4>
        <p class="text-muted">Get started by creating your first event.</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create New Event
        </a>
    </div>
}